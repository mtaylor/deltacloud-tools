	DefaultHttpClient httpClient;
	
	public API(String host, int port, String username, String password)
	{
        DefaultHttpClient httpClient = new DefaultHttpClient();
        
        httpClient.getCredentialsProvider().setCredentials(new AuthScope(host, port), new UsernamePasswordCredentials(username, password));
	}

	private String sendRequest(String url) throws DeltaCloudException
